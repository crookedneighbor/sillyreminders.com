		"@testing-library/user-event": "^14.5.2",
		"@types/eslint": "^9.6.0",
		"autoprefixer": "^10.4.20",
		"eslint": "9.14.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-svelte": "^2.36.0",
		"globals": "^15.0.0",
		"install": "^0.13.0",
		"jsdom": "^25.0.1",
		"npm": "^10.9.0",
		"prettier": "^3.3.2",
		"prettier-plugin-svelte": "^3.2.8",
		"prettier-plugin-tailwindcss": "^0.6.5",
